<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <bean id="consoleEventLogger" class="ru.dglv.springxmlcore.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="ru.dglv.springxmlcore.FileEventLogger" init-method="init">
        <constructor-arg value="./log.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="ru.dglv.springxmlcore.CacheFileEventLogger"
          destroy-method="destroy"
          parent="fileEventLogger">
        <constructor-arg value="5"/>
    </bean>

    <bean id="combinedEventLogger" class="ru.dglv.springxmlcore.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>

</beans>